{
  "name": "ts-react-ssr-basis",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "github:Dattaya/ts-react-ssr-basis",
  "description": "React, TypeScript, webpack unopinionated (mostly) boilerplate",
  "author": "Yaroslav Kiliba",
  "scripts": {
    "start": "concurrently \"npm run build:server-dev\" \"npm run build:client-dev\"",
    "start:prod": "node server-prod-dist",
    "build:start": "npm run build && npm run start:prod",
    "build": "concurrently \"npm run build:server-prod\" \"npm run build:client-prod\"",
    "build:client-dev": "cross-env BABEL_ENV=client-dev webpack-dev-server --config webpack/client-dev.js",
    "build:client-prod": "cross-env BABEL_ENV=client-prod NODE_ENV=production webpack --config webpack/client-prod.js",
    "build:server-dev": "cross-env BABEL_ENV=server webpack --config webpack/server-dev.js",
    "build:server-prod": "cross-env BABEL_ENV=server NODE_ENV=production webpack --config webpack/server-prod.js",
    "tsc": "tsc",
    "lint": "eslint --ext .ts,.tsx client/ common/ server/",
    "test": "cross-env BABEL_ENV=test jest --coverage --config jest/jest.config.js"
  },
  "browserslist": [
    ">0.2%",
    "not dead"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@loadable/component": "^5.9.0",
    "@loadable/server": "^5.9.0",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-constant-elements": "^7.2.0",
    "@babel/plugin-transform-react-inline-elements": "^7.2.0",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.4",
    "@loadable/babel-plugin": "^5.8.0",
    "@loadable/webpack-plugin": "^5.7.1",
    "@types/css-modules": "^1.0.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.12",
    "@types/loadable__component": "^5.9.0",
    "@types/loadable__server": "^5.9.0",
    "@types/node": "^8.10.48",
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "@types/react-helmet": "^5.0.8",
    "@types/react-test-renderer": "^16.8.1",
    "@types/webpack-env": "^1.13.9",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "clean-webpack-plugin": "^2.0.2",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.1",
    "cssnano-preset-advanced": "^4.0.7",
    "eslint": "^5.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "^3.0.1",
    "husky": "^2.2.0",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^4.6.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "mini-css-extract-plugin": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "react-test-renderer": "^16.8.6",
    "style-loader": "^0.23.1",
    "typescript": "^3.4.5",
    "url-loader": "^1.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin-next": "^0.6.4",
    "webpackbar": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint -- --fix",
      "git add"
    ]
  }
}
